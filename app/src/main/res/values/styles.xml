<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <!-- Style for a category of vocabulary words -->
    <style name="CategoryStyle">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="NumberStyle" parent="Theme.AppCompat.DayNight">


        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="colorPrimary">#f57f17</item>
        <item name="colorPrimaryDark">#bc5100</item>
        <item name="android:textColor">@android:color/white</item>


        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="ColorStyle" parent="Theme.AppCompat.DayNight">


    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>

    <item name="colorPrimary">#8e24aa</item>
    <item name="colorPrimaryDark">#5c007a</item>
    <item name="android:textColor">@android:color/white</item>


    <item name="android:textStyle">bold</item>
    <item name="android:textAppearance">?android:textAppearanceMedium</item>
</style>
    <style name="FamilyStyle" parent="Theme.AppCompat.DayNight">


        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="colorPrimary">#2e7d32</item>
        <item name="colorPrimaryDark">#005005</item>
        <item name="android:textColor">@android:color/white</item>


        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="PhraseStyle" parent="Theme.AppCompat.DayNight">


        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="colorPrimary">#1976d2</item>
        <item name="colorPrimaryDark">#004ba0</item>
        <item name="android:textColor">@android:color/white</item>


        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

</resources>